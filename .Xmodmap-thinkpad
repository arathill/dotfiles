! xmodmap -pke
! Exchange Caps Lock with Control 
! Shift + Caps to Caps
clear lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

keycode 66 = Mode_switch Mode_switch Mode_switch NoSymbol

! Exchange right ALT with Control
keycode 108 = Control_R Control_R Control_R

! Exchange right Windows key with ALT ISO
keycode 134 = ISO_Level3_Shift ISO_Level3_Shift ISO_Level3_Shift
keycode 135 = ISO_Level3_Shift ISO_Level3_Shift ISO_Level3_Shift

! Exchange right Control with Menu
keycode 105 = Alt_L Alt_L Alt_L

! Exchange left ALT with Control
keycode 64 = Control_L Control_L Control_L

! Exchange left Control with ALT
keycode 37 = Mode_switch Mode_switch Mode_switch

! Exchange additional key to left ALT
keycode 94 = Alt_L Alt_L Alt_L


! Movement
! Mode_switch + hjkl to arrows
keycode  26 = e E End E eogonek Eogonek eogonek Eogonek e E eogonek Eogonek
